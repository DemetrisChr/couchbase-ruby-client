PROJECT_ROOT="$( cd "$(dirname "$0"/../..)" >/dev/null 2>&1 ; pwd -P )"

set -x
set -e

source /usr/local/share/chruby/chruby.sh
chruby ruby-2.7.1

ruby --version
gem --version

RUBY_ABI="2.5.0 2.6.0 2.7.0"
for ABI in ${RUBY_ABI}
do
    rm -rf ./repos/${ABI}/gems/
    mkdir -p ./repos/${ABI}/gems/
    cd gem-bin
    for PKG in couchbase-*-${ABI}.gem
    do
        cp ${PKG} ../repos/${ABI}/gems/${PKG/-${ABI}/}
    done
    cd ..
    cp gem-src/couchbase-*.gem ./repos/${ABI}/gems/
    gem generate_index --verbose --directory ./repos/${ABI}/
done
